<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Disabled state -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/light_gray" /> <!-- Set the desired color for the disabled state -->
            <corners android:radius="8dp" /> <!-- You can set corner radius if desired -->
        </shape>
    </item>
    <!-- Enabled state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/orange" /> <!-- Set the desired color for the enabled state -->
            <corners android:radius="8dp" /> <!-- You can set corner radius if desired -->
        </shape>
    </item>
</selector>
